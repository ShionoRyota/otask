<meta name="viewport" content="width=device-width,initial-scale=1">

<style>
  body {
  	background-color: #FFFFFF;
    margin-top: 80px;

}

h1 {
	font-weight: 500;
	text-align: center;
}

table {
	margin: auto;
}

p {
	text-align: left;
}

h5 {
  text-align: center;
}

.info {
	text-align: center;
	margin-right: 550px;
}

.info3 {
  text-align: left;
  margin-right: 550px;
  position: relative;
  left: 365px;
}



.info2 {
	position: relative;
  left: 800px;
}

