<div class="birth_date_field">
  <h9><%= f.label :納期 %></h9><br>
  <%= raw sprintf(
              f.date_select(
                  :term,
                  use_month_numbers: true,
                  start_year:        2018,
                  end_year:          (Time.now.year + 5),
                  default:           Date.new(2018, 1, 1),
                  date_separator:    '%s'),
              '年 ', '月 ') + '日' %>
</div>


  <div class="field2">
    <h9><%= f.label :備考 %></h9><br />
    <%= f.text_field :remarks, size: "50x1", style: "font-size:20px" %>
  </div>


  <div class="actions">
    <button class="button2" type="submit">保存する</button><br><br>
  </div>

</ul>
<% end %>





