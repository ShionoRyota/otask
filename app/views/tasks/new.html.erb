<%= form_for @task, :html => {:multipart => true}, url: list_tasks_path do |f| %>
<% if @task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2>エラーがあります</h2>
      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<ul>


  <div class="field">
    <h9><%= f.label :仕事名 %></h9><br />
    <%= f.text_area :taskname, size: "50x2", style: "font-size:20px", placeholder: "シャフト"%>
  </div>

  <div class="field">
    <h9><%= f.label :画像 %></h9><br />
        <%= f.file_field :picture  %>

        <%= image_tag @task.picture.url if @task.picture? %>
  </div>

  <div class="field">
    <h9><%= f.label :注文番号 %></h9><br />
    <%= f.text_field :order_number, size: "50x1", style: "font-size:20px", placeholder:"1234-5678" %>
  </div>

  <div class="field">
    <h9><%= f.label :個数 %></h9><br />
    <%= f.text_field :number, id: "tasks_number", size: "50x1", style: "font-size:20px", placeholder: "10本"%>   </div>

  <div class="field">
    <h9><%= f.label :単価 %></h9><br />
    <%= f.text_field :price, id: "tasks_price", size: "50x1", style: "font-size:20px", placeholder: "1000円" %>  </div>


<html>
<body>

<div class="goukei">合計金額 (税抜)</div>
 <table border = "1">
   <tr><td id = "answer">円</td></tr>
 </table>

