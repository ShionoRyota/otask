    float: left;
    width: $list-width;
    height: calc(100% - #{$gap} - #{$scrollbar-thickness});

  > * {
    background-color: $list-bg-color;
    color: #333;

    padding: 0 $gap;
  }
  }
  .list li {
    padding: 5px 10px;
