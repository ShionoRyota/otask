<style>
.list {
    padding-bottom: 20px;
    margin-right: 60px;
    float: left;
    width: $list-width;
    height: calc(100% - #{$gap} - #{$scrollbar-thickness});

  > * {
    background-color: $list-bg-color;
    color: #333;

    padding: 0 $gap;
  }
  }
  .list li {
    padding: 5px 10px;
    border: 1px solid #0c5460;
    list-style: none;
  }
  .list li:hover {
    cursor: move;
  }

  .list li {
      background-color: #fff;
      padding: $gap;
      &:not(:last-child) {
        margin-bottom: $gap;
      }

      border-radius: $card-border-radius;
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);

      img {
        display: block;
        width: calc(100% + 2 * #{$gap});
        margin: -$gap 0 $gap (-$gap);
        border-top-left-radius: $card-border-radius;
        border-top-right-radius: $card-border-radius;
      }
    }
  /*.a { background-color: #fff999; }
  .b { background-color: #f3981d; }
  .c { background-color: #a4d5bd; }*/
</style>

<div class="lists">
  <div class="lists_wrap">
  <div class="list">
    <ul class="list" id="list1">
    <header1><%= Date.today.strftime("%Y年%m月%d日") %></header1>
      <% @lists.each do |list| %>
      <% Task.where(user_id: @user, list_id: list.id, flag_id: [2, 3], sale_time: Time.new.all_day).find_each do |task| %>
        <li class="a1">
         <%= link_to list.name %> |
         <%= link_to task.taskname %>
        </li>
      <% end %>
    <% end %>
    </ul>
  </div>
  </div>
</div>


