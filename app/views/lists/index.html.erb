<%= form_for @list do |form| %>
  <div class="mokuji"><%= form.label :取引先を登録 %></div>
  <div class="fm"><%= form.text_field :name, size: "25x1", style: "font-size:30px", placeholder: "例: ○△□製作所" %></div>
  <button class="button" type="submit">登録する</button>
<% end %>


<% @lists.each do |list| %>
 <div class="box3">
     <a1><%= link_to list.name, list_tasks_path(list) %></a1>
     <a2><%= link_to "編集", edit_list_path(list), :style => 'color: #000000;' %></a2>
     <a3><%= link_to "削除", list_path(list), :method => :delete, :style => 'color: #FF0000;' %></a3>
 </div>
<% end %>